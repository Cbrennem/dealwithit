<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.threegnome.dealwithit.MainActivity"
    android:background="#b22c2c"
    android:weightSum="1"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/pictureLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photoView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textAlignment="center"
            android:text="Deal with it!"
            android:textColor="@color/darkred"
            android:id="@+id/txtDealWithIt"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <ImageButton
            style="@style/toolbar_buttons"
            android:onClick="onClickChoosePhoto"
            android:id="@+id/btnPic"
            android:scaleType="fitXY"
            android:src="@drawable/ic_portrait_black_24dp"
            android:layout_gravity="start"/>

        <ImageButton
            style="@style/toolbar_buttons"
            android:onClick="onAnimate"
            android:id="@+id/btnAnimate"
            android:scaleType="centerInside"
            android:src="@drawable/dealwithitglasses"
            android:layout_gravity="center"/>

        <ImageButton
            style="@style/toolbar_buttons"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_gravity="end"/>

    </LinearLayout>

</LinearLayout>
